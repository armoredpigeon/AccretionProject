package myCodeBits{	//import particle;	import flash.events.TimerEvent;	import flash.geom.Point;	import flash.display.MovieClip;		public class Ball extends particle	{		private var scaleIncrement:Number;		private var currentScale:Number;				public function Ball($position:Point, $vector:Point, $gravity:Number, $lifespan:int, $velocity:Point, $mass:Number)		{			super($position, $vector, $gravity, $lifespan, $velocity, $mass);						x = position.x;			y = position.y;						scaleIncrement = 0.05;			currentScale = $mass/3;						Object(this).scaleX = Object(this).scaleY = currentScale;						update_i.addEventListener(TimerEvent.TIMER, setPosition, false, 0, true);		}				public function setPosition(e:TimerEvent):void		{			currentScale += 0.05;			Object(this).scaleX = Object(this).scaleY = currentScale;			x = position.x;			y = position.y;		}	}}
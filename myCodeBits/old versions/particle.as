package myCodeBits{		import flash.utils.Timer;	import flash.events.TimerEvent;		import flash.geom.Point;		import flash.display.MovieClip;	public class particle extends MovieClip	{				protected var position:Point;		protected var vector:Point;				private var gravity:Number;		private var friction:Number;		private var velocity:Point;		private var lifespan:int;				protected var update_i:Timer;				public function particle($position:Point, $vector:Point, $gravity:Number, $friction:Number)		{						position = $position;			vector = $vector;						gravity = $gravity;			friction = $friction;									update_i = new Timer(25);						update_i.addEventListener(TimerEvent.TIMER, update, false, 0, true);			update_i.start();		}				public function update(e:TimerEvent):void		{			position.x += vector.x;			position.y += vector.y;						vector.y += gravity;						vector.x += friction;		}	}	}